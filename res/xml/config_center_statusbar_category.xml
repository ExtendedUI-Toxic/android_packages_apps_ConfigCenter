<PreferenceScreen
    android:title="@string/statusbar_category"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="cat_1"
        android:title="@string/statusbar_icons_category">

        <Preference
            android:title="@string/statusbar_title"
            android:summary="@string/status_bar_items_summary">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.StatusbarItemsActivity" />
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="cat_2"
        android:title="@string/network_traffic_indicator_category">

        <com.exui.config.center.preferences.SystemSettingSwitchPreference
            android:key="network_traffic_state"
            android:title="@string/network_traffic_state_title"
            android:defaultValue="false" />

        <com.exui.config.center.preferences.CustomSeekBarPreference
            android:key="network_traffic_autohide_threshold"
            android:title="@string/network_traffic_autohide_threshold_title"
            android:max="10"
            settings:min="0"
            settings:units="" />

        <com.exui.config.center.preferences.SystemSettingSwitchPreference
            android:key="network_traffic_hidearrow"
            android:title="@string/network_traffic_hidearrow"
            android:summary="@string/network_traffic_hidearrow_summary"
            android:dependency="network_traffic_state"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="cat_3"
        android:title="@string/statusbar_gestures_category">

        <com.exui.config.center.preferences.SystemSettingSwitchPreference
            android:key="double_tap_sleep_gesture"
            android:title="@string/double_tap_sleep_gesture_title"
            android:summary="@string/double_tap_sleep_gesture_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>